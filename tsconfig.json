{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata":  true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks":  false, 
    "strict": true,
    "types": ["webpack-env"]
  },
  "exclude": [
    "bin",
    "node_modules",
    "ClientApp/dto/**/*.ts"
  ]
}

